<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_background"
    android:elevation="2dp"
    android:layout_margin="8dp">

    <!-- Doctor's Image -->
    <ImageView
        android:id="@+id/image_doctor"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_doctor_placeholder" />

    <!-- Details Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_vet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Jenny Wilson"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_vet_clinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pawsnclaws Hospital"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_vet_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.7 km"
            android:textColor="#757575"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Consultation Fee -->
    <TextView
        android:id="@+id/text_vet_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹1000"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:layout_gravity="center_vertical" />
</LinearLayout>
