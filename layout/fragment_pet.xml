<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar with Back button and Search Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:contentDescription="Back button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Pet"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:contentDescription="Search icon" />
    </LinearLayout>

    <!-- ScrollView for scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="786dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"
                android:text="Videos"
                android:textColor="#000"
                android:textSize="18sp" />

            <!-- First Video Section with Play Button Overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp">

                <VideoView
                    android:id="@+id/videoView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/playButton1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="Play button"
                    android:src="@drawable/ic_play" />
            </FrameLayout>

            <TextView
                android:id="@+id/videoTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="4dp"
                android:text="Video Title 1"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/videoDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="16dp"
                android:text="This is a description of the first video."
                android:textColor="#555"
                android:textSize="14sp" />

            <!-- Second Video Section with Play Button Overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp">

                <VideoView
                    android:id="@+id/videoView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/playButton2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="Play button"
                    android:src="@drawable/ic_play" />
            </FrameLayout>

            <TextView
                android:id="@+id/videoTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="4dp"
                android:text="Video Title 2"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/videoDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="16dp"
                android:text="This is a description of the second video."
                android:textColor="#555"
                android:textSize="14sp" />

            <!-- Thired Video Section with Play Button Overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp">

                <VideoView
                    android:id="@+id/videoView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/playButton3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:contentDescription="Play button"
                    android:src="@drawable/ic_play" />
            </FrameLayout>

            <TextView
                android:id="@+id/videoTitle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="4dp"
                android:text="Video Title 2"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/videoDescription3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="16dp"
                android:text="This is a description of the second video."
                android:textColor="#555"
                android:textSize="14sp" />

            <!-- Section Title for Articles -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="16dp"
                android:text="Articles"
                android:textColor="#000"
                android:textSize="18sp" />

            <!-- Article 1 with Image -->
            <ImageView
                android:id="@+id/article_image1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:src="@drawable/article_image1"
                android:contentDescription="Image for Article 1" />

            <TextView
                android:id="@+id/article_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Article Title 1"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/article_summary1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="16dp"
                android:text="This is a summary of the first article."
                android:textSize="14sp"
                android:textColor="#666" />

            <!-- Article 2 with Image -->
            <ImageView
                android:id="@+id/article_image2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:src="@drawable/article_image2"
                android:contentDescription="Image for Article 2" />

            <TextView
                android:id="@+id/article_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Article Title 2"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/article_summary2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="16dp"
                android:text="This is a summary of the second article."
                android:textSize="14sp"
                android:textColor="#666" />

            <!-- Article 3 with Image -->
            <ImageView
                android:id="@+id/article_image3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:src="@drawable/article_image3"
                android:contentDescription="Image for Article 3" />

            <TextView
                android:id="@+id/article_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Article Title 3"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/article_summary3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="16dp"
                android:text="This is a summary of the third article."
                android:textSize="14sp"
                android:textColor="#666" />

            <!-- Article 4 with Image -->
            <ImageView
                android:id="@+id/article_image4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:src="@drawable/article_image4"
                android:contentDescription="Image for Article 4" />

            <TextView
                android:id="@+id/article_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Article Title 4"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/article_summary4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="16dp"
                android:text="This is a summary of the fourth article."
                android:textSize="14sp"
                android:textColor="#666" />

            <!-- Plain White Banner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
